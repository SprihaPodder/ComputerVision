{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/bin/sh",
            "args": [
                "-c",
                "/usr/bin/clang++ -std=gnu++14 -fcolor-diagnostics -fansi-escape-codes -g `pkg-config --cflags --libs opencv4` ${file} -o ${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}